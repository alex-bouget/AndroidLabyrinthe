<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Layout that contain all the content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--Drawable surface for the labyrinth-->
        <!--Height set with dp th correspond to Density-independant Pixel-->
        <com.cppfdm.labyrinthe.view.Viewer
            android:id="@+id/game"
            android:layout_width="match_parent"
            android:layout_height="320dp" />

        <!--Layout with UP button-->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop='10dp'
            android:gravity="center_horizontal">
            <!--UP button-->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="UP"
                android:layout_weight="0.2"
                android:onClick="moveUp"
                />
        </LinearLayout>

        <!--Layout with LEFT and RIGHT button-->
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop='5dp'
            android:gravity="center_horizontal">

            <!--LEFT button-->
            <Button
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="LEFT"
                android:layout_weight="0.2"
                android:onClick="moveLeft"
                />

            <!--RIGHT button-->
            <Button
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="RIGHT"
                android:layout_weight="0.2"
                android:onClick="moveRight"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>

        <!--Layout with DOWN button-->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop='5dp'
            android:gravity="center_horizontal">

        <!--DOWN button -->
        <Button
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="DOWN"
            android:layout_weight="0.2"
            android:onClick="moveDown"
            />
        </LinearLayout>

        <!--Layout with MAP button-->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop='5dp'
            android:gravity="center_horizontal">

            <!--MAP button -->
            <Button
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MAP"
                android:layout_weight="0.2"
                android:onClick="showMap"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>